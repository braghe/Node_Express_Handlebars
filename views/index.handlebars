<h1>The Burger</h1>

<h2>About to Devour</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
    <div class="col-md-9">
      {{this.id}}{{this.burger_name}}
    </div>
    <div class="col-md-3">
      <form class="devour-form">
        <input type="hidden" class="burger_id" type="text" value={{this.id}}>
        <button type="submit" class="btn btn-default">Devour it !</button>
      </form>
    </div>
      
    {{/unless}}
  {{/each}}
</ul>

<h2>Already Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      {{this.id}}{{this.burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-form" action="/burgers/create" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
